/* global */
sans_serif()
  font-family: SegoeUI, "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif

serif()
  font-family: Palatino,"Palatino Linotype","Palatino LT STD","Book Antiqua",Georgia, "Kaiti SC", STKaiti, "AR PL UKai CN", "AR PL UKai HK", "AR PL UKai TW", "AR PL UKai TW MBE", "AR PL KaitiM GB", KaiTi, KaiTi_GB2312, DFKai-SB, "TW\-Kai", serif

code_font()
  font-family: 'Roboto Mono', Monaco, courier, monospace

pagination_dot($offset, $h_offset)
  position: relative
  &:after
    position: absolute
    height: 5px
    content: ""
    display:block
    width: 5px
    border-radius: 50%
    margin: 0 auto
    top: $offset
    left: $h_offset
    right: 0

body
  sans_serif()
  margin: 0
  width: 100%
  min-height: 95vh
  display: flex
  flex-direction: column

.body-content
  flex: 1
  width: 100%
  margin: 0

/* header */
.header
  // layout
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 5.5em
  z-index: 101

  // content
  display: flex
  justify-content: space-around
  align-items: center

  // header links global setting
.header a
  text-decoration: none

.header-title
  // layout
  display: flex
  align-items: center
  justify-content: flex-start

.header-logo
  text-align: center
  img
    background-color: white
    width: 4em
    border-radius: 50%

.header-text
  text-align: left
  h1
    display: inline
    font-size: 1.6em
    letter-spacing: -1px
    margin: 0 0.25em
  p
    display: inline
    font-weight: 100
    font-size: 1em

/* header navigation */

.header-nav
  display: flex
  align-items: center
  justify-content: center

.header-nav-item
  padding: 1em 1em
  sans_serif()

.icon-item-name
.drop-down-item-name
  text-align: center
  vertical-align: text-top
  width: 1.8em
  height: 1.8em
  padding-bottom: 0.4em
  img
    width: 2em
    height: 2em
    object-fit: cover

.text-item-name
  font-size: 1.1em
  
#drop-down-item
  background-color: transparent
  position: relative
  

.drop-down-item-dropdown
  display: none
  position: absolute
  right: 1em
  padding-top: 3em
  .header-nav-item
    padding: 1em 2em
    text-align: center
    width: 100%
    background-color: white
    
#drop-down-item:hover .drop-down-item-dropdown
  display: block

/* footer */

.footer
  width: 70vw
  margin: 6vh auto 2vh auto
  display:flex
  justify-content: flex-start
  align-content: center
  border-top: 1px solid #ddd
  box-shadow: 0px -5px 10px -8px #ddd
  padding: 1em 0.75em
  sans_serif()

.footer  a
  text-decoration: none
  
.footer-site-info
  flex: 1
  flex-grow: 2
  display: flex
  flex-flow: row wrap
  align-items: center
  font-size: 0.75em
  p
    margin: 0.5em 0
  
.footer-social-links
  flex: 1
  display: flex
  justify-content: flex-end
  align-items: center
  flex-flow: row wrap
  .footer-social-item
    margin: 0.5em 0.5em    

/* home page layout */

.home-container
  margin: 0
  width: 100%
  text-align: center

.home-slogan
  serif()
  font-size: 1.3em
  padding-top: 5em
  margin: 0
  padding-bottom: 1.5em
  margin-bottom: 1.5em

.home-cards
  margin: 0 auto
  margin-top: 3em
  max-width: 1280px
  display: flex
  align-items: center
  justify-content: space-between
  flex-direction: row
  flex-wrap: wrap
  padding: 0 2.5em

/* home card */

.card
  font-size: 1em
  text-align: left
  width: 30%
  display: flex
  align-items: flex-start
  background-color: white
  border-radius: 5px
  box-shadow: 0.5px 0.5px 3px -0.5px rgba(170, 175, 173, 0.61)
  margin: 2em 0
  min-height: 18em
  padding: 0
  position: relative
  flex-direction: column
  overflow hidden
  padding: 0

.card-body
  margin: 0
  width: 100%
  display: flex
  align-items: stretch
  flex-direction: column
  overflow hidden
  flex: 1
  position relative

.card-footer
  width: 90%
  height: 5em
  display: flex
  margin-left: 1em
  .swiper-container
    width: 95%

.card-excerpt
  opacity 0
  margin: 0 2em
  position absolute
  top: 2em
  text-align: justify
  line-height: 1.5

.card-icon
  margin: 0
  display: flex
  align-items: center
  margin-right: 0.5em
  img
    width: 2.8em
    height: 2.8em
    object-fit: cover

.swiper-button-next
  width: 10px

.card-next-button
  position absolute
  bottom: 0
  right: 0
  margin-right: 1em
  margin-bottom: 0.5em
  cursor pointer

.card-cover
  width: 100%
  height: 13em
  img
    width: 100%
    height: 100%
    object-fit: cover

.card-body .tags
  position absolute
  bottom: 0
  left: 0
  margin-left: 1em
  margin-bottom: 0.5em
  display: block
  i
    margin-bottom: 0.3em
  label 
    display: block
    font-size: 0.9em
    line-height: 1.2
    a
      text-decoration: none

.title-time-info
  display: flex
  justify-content: space-around
  align-items: center
  height: 100%
  a
    text-decoration: none
  *
    margin: 0
  h4
    width: 12em
    font-size: 0.9em
  p
    font-size: 0.8em

.insight-info
  height: 100%
  font-size: 0.9em
  a
    text-decoration: none
  ul
    display: flex
    list-style-type none
    justify-content: space-around
    align-items: center
    height: 100%
    margin: 0
    padding: 0


/* archive page layout */

.archive-container
  margin: 0
  width: 100%
  text-align: center
  margin-top: 8em

.archive-cards
  margin: 0 auto
  position: relative
  max-width: 1280px
  &:before
    z-index: -100
    content: '';
    position: absolute;
    top: 0;
    left: 50%
    height: 100%;
    width: 4px;
  h1
    width: 100%
    z-index: 100
    span
      display: inline-block
      width: 3em
      height: 2.2em
      padding-top: 0.8em
      border-radius: 50%

.archive-section
  width: 25em
  margin: 0 auto
  position: relative

/* archive card */
.archive-cards .card
  min-height: auto
  height: 5em
  width: 100%
  position: relative
  &:nth-of-type(odd)
    left: -12em
    .card-edge
      position: absolute
      left: 0
      width: 0.4em
      overflow hidden
  &:nth-of-type(even)
    right: -12em
    .card-edge
      position: absolute
      right: 0
      width: 0.4em
      overflow hidden


