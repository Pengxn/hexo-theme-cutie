/* post page layout */
.post
  max-width: 800px
  padding: 0
  margin-top: 10em
  margin-left: 15%
  a
    text-decoration none

.post-header
  display: flex
  flex-direction: column
  border-top-left-radius:5px
  border-top-right-radius:5px

.post-title-container
  display: flex
  align-items: center
  margin: 1em

.post-title
  margin: 0
  margin-left: 1em

.post-icon
  border-radius: 50%
  width: 3em
  height: 3em
  background: white
  overflow hidden
  img
    width: 150%
    height: auto
    object-fit: cover

.post-meta
  display: flex
  justify-content: flex-end
  align-items: stretch
  margin: 1em
  p
    display: inline
    margin: 0

.post-author
.post-date
.post-copyright
  padding: 0 0.5em
  font-size: 0.9em

.post-content
.post-comment
  padding: 2em

.post-gallery
  padding: 1em
  .post-gallery-item
    border-radius: 8px
    padding: 1em
  .post-gallery-item-link
    border-radius: 8px
    padding: 1em
    height: 15em
    // margin: 0 auto
    display: block
  img
    border-radius: 8px
    padding: 1em
    object-fit: cover
    width: 100%
    height: 100%

/* post page typography */

.post-content
  line-height: 1.5
  font-size:0.9em
  text-align: justify
  hr
    border: 0
    height: 1px
    background-image: -webkit-linear-gradient(left,  #f0f0f0, #8c8b8b, #f0f0f0)
    background-image: -moz-linear-gradient(left,  #f0f0f0, #8c8b8b, #f0f0f0)
    background-image: -ms-linear-gradient(left,  #f0f0f0, #8c8b8b, #f0f0f0)
    background-image: -o-linear-gradient(left,  #f0f0f0, #8c8b8b, #f0f0f0)
  img
    max-height: 300px
    max-width: 95%
    height: auto
    box-shadow: 3px 3px 12px 3px #eee
    border-radius: 5px
    padding: 2.5%
    margin: 0.5em
    cursor: pointer
  code
    code_font()
    font-weight: 400
    vertical-align: middle
    padding: 1px 5px
    margin: 0 2px
    font-size: 0.9em
    background: #f6f6f6
  pre
    code_font()
    padding: 12px 15px
    margin: 0
    border: 1px solid #ccc
    border-radius: 8px
    code
      border: none
      background: none
      font-size: 0.8em
      color: #222
      font-weight: normal
  
  figure.highlight
    margin: 2em 0
    border: 1px solid #ccc
    padding: 0.8em
    border-radius: 8px
    font-size: 0.8em
    code_font()
    table
    tbody
    tr
      display: block
      width: 100%
    td.code
      width: 100%
    td.gutter
      padding-right: 1em
      color: #aaa
    figcaption 
      font-size: 0.9em
      color:#aaa
      margin-bottom: 1em
      a
        float: right
    th
    td
      padding: 0px
      text-align: left
      border-bottom: none
      .line
        display: inline-block
        width: 100%
      .marked
        background-color: #f0fff4
    
  table
    max-width: 100%
    overflow: auto
    display: block
    th
    td
      padding: 12px 15px
      text-align: left
      border-bottom: 1px solid #E1E1E1
      pre
        border: none
        padding: 0.5em 0
    th:first-child
    td:first-child
      padding-left: 0
    th:last-child
    td:last-child
      padding-right: 0
  
   blockquote
    position: relative
    padding-left: 2rem
    margin-top: 2rem
    color: #888
    font-size: 0.9em
    &:before
      display: block
      content: "\201C"
      font-size: 5em
      margin: 0
      padding: 0
      left:0
      top:-2rem
      position: absolute
    footer
      color:#222
      &:before
        content:"\2014 \2009"
      *
        margin-right: 0.5rem
      overflow: auto
  blockquote.pullquote
    display: block
    width: 20%
    font-size: 1.1em
    padding: 1em 1em 0 1em
    margin: 0
  blockquote.pullquote.left
    float: left
    &:before
      display: block
      content: "\201C"
      font-size: 5em
      margin: 0
      padding: 0
      left:0
      top:-1rem
      position: absolute
  blockquote.pullquote.right
    float: right
    &:before
      display: block
      content: "\201D"
      font-size: 5em
      margin: 0
      padding: 0
      left: 75%
      top:-1rem
      position: absolute
  
  dt
    display: block
    width: 100%
    text-decoration: underline
    margin: 0.5em 0
  dd
    color:#666
    margin-top: 0.5em
    pre
      code
        border: 0
        background: 0
        color: #666
  
  dl
    display: flex
    flex-direction: row
    flex-wrap: wrap
    align-items: flex-start
    dt
      display: block
      width: 15%
      text-align: center
      color: white
      text-decoration: none
      line-height: 1.2
      padding: 0.5em
      border-radius: 5px
    dd
      width: 75%
      ol
      ul
        padding-left: 1em
      *
        margin-top: 0
        margin-left: 0
      figure
      figure.highlight
        margin: 0
      pre
        code
          border: 0
          background: 0

