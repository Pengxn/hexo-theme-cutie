.Card
  // text-align: left
  // display: flex
  // flex-direction: row
  // align-items: center
  // justify-content: center
  background-color: white
  border-radius: 5px
  box-shadow: 0.5px 0.5px 3px -0.5px rgba(170, 175, 173, 0.61)

.swiper-container
  height: 100%

.swiper-container-horizontal > .swiper-pagination-bullets
  padding-top: 1em
  padding-bottom: 1em
  bottom:0
  background-color: white
  border-bottom-left-radius: 5px
  border-bottom-right-radius: 5px

.swiper-pagination-bullet
  background: none
  padding-right: 0.5em

.card-sparkle
  z-index:11
  position: absolute
  top: 0
  padding-top: 1em
  padding-bottom: 1em
  width: 100%
  text-align: right
  background-color: white
  border-top-left-radius: 5px
  border-top-right-radius: 5px
  span
    padding: 0.2em
    cursor: pointer
  span.placeholder
    width: 1em
    display: inline-block
  .popular-card
    color: $hue12
  .coding-card
    color: $hue6
  .github-card
    color: $hue1
  .external-link-card
    color: $hue11
  .equation-card
    color: $hue7

.Card-body
  height: 100%
  flex-direction: row
  display: flex
  align-items: center
  justify-content: center
  border-radius: 5px
  overflow hidden
  .Card-figure
    flex: 1
    margin: 0 0 0 3em
    img
      width: 4em
      height: 4em
      object-fit: cover
  .Card-title
    flex: 2
    display: block
    margin: 0 5em 0 0
    text-align: left
    h2 
      margin: 0
      font-size: 1.4em
      font-weight: normal

  .Card-excerpt
    display: block
    p
      margin: 0
      line-height: 1.5
      font-size: 1.2em
    justify-content: center
    text-align: left
    flex: 1
    margin: 0 4em

  .Card-meta
    display: block
    font-size: 1.1em
    color: #aaa
    .Card-tags
      text-align: center
      margin-bottom: 0.5em
    ul
      width: 100%
      padding: 0
      margin: 0
      li
        display: inline-block
        margin: 0 1em 0 0
        a
          &:link
          &:visited
            color:#aaa
          &:hover
            color:#444
  
  .Card-pictures
    display: block
    flex: 1
    justify-content: center
    overflow hidden
    // margin: 3em 4em
    border-radius: 5px
    img
      object-fit: cover
      height: auto  
      width: 100%
  .Card-videos
    position: relative
    height: 0
    overflow hidden
    padding-bottom:12em
    width: 100%
    iframe
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%

  .Card-codes
    margin-left: 4em
    flex: 1
    justify-content: center
    overflow hidden
    font-size: 0.8em
    border-radius: 5px
    figure.highlight
      margin: 0
      margin-top: 4em
      display: block
      width: 100%
      figcaption
        text-align: left
      .line
        display: inline-block
        width: 100%
        text-align: left
      pre
        overflow hidden
        
.swiper-slide
  border-radius: 5px
.Card-badge
  -webkit-border-radius: 50%
  -moz-border-radius: 50%
  border-radius: 50%   
  border: 0px solid #FFF
  width: 10px
  height: 10px  
  background-color: #FF6B6B
  position:absolute
  top:-5px
  right:-5px

