.Card
  // text-align: left
  // display: flex
  // flex-direction: row
  // align-items: center
  // justify-content: center
  background-color: white
  border-radius: 5px
  box-shadow: 0.5px 0.5px 3px -0.5px rgba(170, 175, 173, 0.61)

.swiper-container
  height: 100%

.swiper-container-horizontal > .swiper-pagination-bullets
  padding-top: 1em
  padding-bottom: 1em
  bottom:0
  background-color: white
  border-bottom-left-radius: 5px
  border-bottom-right-radius: 5px

.swiper-pagination-bullet
  background: none
  padding-right: 0.5em

.card-sparkle
  z-index:11
  position: absolute
  top: 0
  padding-top: 1em
  padding-bottom: 1em
  width: 100%
  text-align: right
  background-color: white
  border-top-left-radius: 5px
  border-top-right-radius: 5px
  span
    padding: 0.2em
    cursor: pointer
  span.placeholder
    width: 1em
    display: inline-block
  .popular-card
    color: $hue12
  .coding-card
    color: $hue6
  .github-card
    color: $hue1
  .external-link-card
    color: $hue11
  .equation-card
    color: $hue7

.Card-body
  height: 100%
  flex-direction: row
  display: flex
  align-items: center
  justify-content: center
  border-radius: 5px
  overflow hidden
  .Card-figure
    flex: 1
    margin: 0 0 0 3em
    img
      width: 4em
      height: 4em
      object-fit: cover
  .Card-title
    flex: 2
    display: block
    margin: 0 5em 0 0
    text-align: left
    h2 
      margin: 0
      font-size: 1.4em
      font-weight: normal

  .Card-excerpt
    display: block
    p
      margin: 0
      line-height: 1.5
      font-size: 1.2em
    text-align: left
    // flex: 1
    // margin: 0 4em
    width: 100%
    overflow hidden
    z-index -1
    height: 12em
    font-size: 0.8em
    margin: 0 4em
    // padding-top: 1em
    // padding-bottom:12em

  .Card-meta
    display: block
    font-size: 1.1em
    color: #aaa
    .Card-tags
      text-align: center
      margin-bottom: 0.5em
    ul
      width: 100%
      padding: 0
      margin: 0
      li
        display: inline-block
        margin: 0 1em 0 0
        a
          &:link
          &:visited
            color:#aaa
          &:hover
            color:#444
  
  .Card-pictures
    display: block
    flex: 1
    justify-content: center
    overflow hidden
    // margin: 3em 4em
    border-radius: 5px
    img
      object-fit: cover
      height: auto  
      width: 100%
  .Card-videos
    position: relative
    height: 0
    overflow hidden
    padding-bottom:12em
    width: 100%
    iframe
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%

  .Card-codes
    margin-left: 4em
    flex: 1
    justify-content: center
    overflow hidden
    font-size: 0.8em
    border-radius: 5px
    figure.highlight
      margin: 0
      margin-top: 4em
      display: block
      width: 100%
      figcaption
        text-align: left
      .line
        display: inline-block
        width: 100%
        text-align: left
      pre
        overflow hidden
        
.swiper-slide
  border-radius: 5px
.Card-badge
  -webkit-border-radius: 50%
  -moz-border-radius: 50%
  border-radius: 50%   
  border: 0px solid #FFF
  width: 10px
  height: 10px  
  background-color: #FF6B6B
  position:absolute
  top:-5px
  right:-5px

.excerpt-display
  width: 100%
  color: #333
  line-height: 1.5
  font-size:10px
  height: 100%
  overflow hidden
  +for_breakpoint(mobile)
    text-align: justify
  hr
    border: 0
    height: 1px
    background-image: -webkit-linear-gradient(left,  #f0f0f0, #8c8b8b, #f0f0f0)
    background-image: -moz-linear-gradient(left,  #f0f0f0, #8c8b8b, #f0f0f0)
    background-image: -ms-linear-gradient(left,  #f0f0f0, #8c8b8b, #f0f0f0)
    background-image: -o-linear-gradient(left,  #f0f0f0, #8c8b8b, #f0f0f0)      
  h1, h2, h3, h4, h5, h6
    color: #333
    // anchor offset
    &:target:before
      content:""
      display:block
      height:8em /* fixed header height*/
      margin:-8em 0 0 /* negative fixed header height */
  h1
    position: relative
    margin:0.1em 0
  a
    color: $primary_color
    &:visited
      color:$primary_color_grayout
  img
    max-height: 300px
    max-width: 95%
    height: auto
    box-shadow: 3px 3px 12px 3px #eee
    border-radius: 5px
    padding: 2.5%
    margin: 0.5em
    cursor: pointer
  code
    color: $secondary_color
    code_font()
    font-size: 0.7em
    font-weight: 600
    vertical-align: middle
    border: 1px solid #999
    background-color: #efefef
    padding: 2px 4px
    margin: 0 2px
    border-radius: 0.4em
  pre
    code_font()
    padding: 12px 15px
    margin: 0
    border: 1px solid #ccc
    border-radius: 8px
    code
      border: none
      background: none
      font-size: 0.8em
      color: #222
      font-weight: normal
  figure.highlight
    margin: 2em 0
    border: 1px solid #ccc
    padding: 0.8em
    border-radius: 8px
    font-size: 0.8em
    code_font()
    table
    tbody
    tr
      display: block
      width: 100%
    td.code
      width: 100%
    td.gutter
      padding-right: 1em
      color: #aaa
    figcaption 
      font-size: 0.9em
      color:#aaa
      margin-bottom: 1em
      a
        float: right
    th
    td
      padding: 0px
      text-align: left
      border-bottom: none
      .line
        display: inline-block
        width: 100%
      .marked
        background-color: #f0fff4
  .gist
    td
      padding: 0
      border-bottom: none
  table
    max-width: 100%
    overflow: auto
    display: block
    th
    td
      padding: 12px 15px
      text-align: left
      border-bottom: 1px solid #E1E1E1
      pre
        border: none
        padding: 0.5em 0
    th:first-child
    td:first-child
      padding-left: 0
    th:last-child
    td:last-child
      padding-right: 0
  blockquote
    position: relative
    padding-left: 2rem
    margin-top: 2rem
    color: #888
    font-size: 0.9em
    &:before
      display: block
      content: "\201C"
      font-size: 5em
      margin: 0
      padding: 0
      left:0
      top:-2rem
      position: absolute
    footer
      color:#222
      &:before
        content:"\2014 \2009"
      *
        margin-right: 0.5rem
      overflow: auto
  blockquote.pullquote
    display: block
    width: 20%
    font-size: 1.1em
    padding: 1em 1em 0 1em
    margin: 0
  blockquote.pullquote.left
    float: left
    &:before
      display: block
      content: "\201C"
      font-size: 5em
      margin: 0
      padding: 0
      left:0
      top:-1rem
      position: absolute
  blockquote.pullquote.right
    float: right
    &:before
      display: block
      content: "\201D"
      font-size: 5em
      margin: 0
      padding: 0
      left: 75%
      top:-1rem
      position: absolute
  dt
    display: block
    width: 100%
    text-decoration: underline
    margin: 0.5em 0
  dd
    color:#666
    margin-top: 0.5em
    pre
      code
        border: 0
        background: 0
        color: #666
  dl
    display: flex
    flex-direction: row
    flex-wrap: wrap
    align-items: flex-start
    dt
      display: block
      width: 20%
      +for_breakpoint(mobile)
        width: 100%
      text-align: center
      color: white
      text-decoration: none
      // margin: 0.5em 0
      // float: left
      // clear: left
      line-height: 1.2
      padding: 0.5em
      border-radius: 5px
      &:nth-of-type(1)
        background-color: $hue5
      &:nth-of-type(2)
        background-color: $hue2
      &:nth-of-type(3)
        background-color: $hue3
      &:nth-of-type(4)
        background-color: $hue4
      &:nth-of-type(5)
        background-color: $hue6
      &:nth-of-type(6)
        background-color: $hue7
    dd
      margin-left: 2em
      width: 70%
      +for_breakpoint(mobile)
        width: 100%
        margin-left: 0
      ol
      ul
        padding-left: 1em
      *
        margin-top: 0
        margin-left: 0
      color:#666
      // padding-top: 0.5em
      // margin-left: 12em
      figure
      figure.highlight
        margin: 0
      pre
        code
          border: 0
          background: 0
          color: #666